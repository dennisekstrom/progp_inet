import java.net.*;
import java.io.*;

/**
 * @author Viebrapadata
 */
public class ATMServer {

	private static int connectionPort = 8988;
	private static final String DEFAULT_WELCOME_MESSAGE = "Welcome to Bank!";

	public static void main(String[] args) throws IOException {

		ServerSocket serverSocket = null;

		boolean listening = true;

		try {
			serverSocket = new ServerSocket(connectionPort);
		} catch (IOException e) {
			System.err.println("Could not listen on port: " + connectionPort);
			System.exit(1);
		}

		System.out.println("Bank started listening on port: " + connectionPort);
		while (listening)
			System.out.println("hej");
			new ATMServerThread(serverSocket.accept(), DEFAULT_WELCOME_MESSAGE)
					.start();

		serverSocket.close();
	}
}